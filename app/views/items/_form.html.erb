<%= form_for(item) do |f| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
    <div class="field">
      <%= f.label :slot %>
      <%= f.select(:slot, Item::VALID_EQUIPMENT_SLOTS) %>
    </div>
    <div class="field">
      <%= f.label :tier %>
      <%= f.select(:tier, Item::VALID_ITEM_TIERS) %>
    </div>
    <div class="field">
      <%= f.label :craft_type %>
      <%= f.select(:craft_type, Item::VALID_CRAFT_TYPES) %>
    </div>
    <div class="field">
      <%= f.label :armor, 'Armor Rating (if applicable)' %>
      <%= f.number_field :armor %>
    </div>
    <div class="field">
      <%= f.label :armor_type %>
      <%= f.select(:armor_type, Item::VALID_ARMOR_TYPES) %>
    </div>
    <div class="field">
      <%= f.label :damage_min, 'Minimum damage rating (if applicable)' %>
      <%= f.number_field :damage_min %>
    </div>
    <div class="field">
      <%= f.label :damage_max, 'Maximum damage rating (if applicable)' %>
      <%= f.number_field :damage_max %>
    </div>
    <div class="field">
      <%= f.label :val, 'Gold Value' %>
      <%= f.number_field :val %>
    </div>
    <div class="field">
      <%= f.label :enhancement_slots, 'Number of Rune Slots' %>
      <%= f.number_field :enhancement_slots %>
    </div>
    <div class="field">
      <%= f.label :level_requirement %>
      <%= f.number_field :level_requirement %>
    </div>
    <div class="field">
      <%= f.label :weight %>
      <%= f.text_field :weight %>
    </div>
    <div class="field">
      <%= f.label :other_effects %>
      <%= f.text_area :other_effects %>
    </div>
    <div class="field">
      <%= f.label :comments %>
      <%= f.text_area :comments %>
    </div>
    <div class="field">
      <%= f.label :thumbnail_url %>
      <%= f.text_field :thumbnail_url %>
    </div>
    <div class="field">
      <%= f.label :thumbnail_size %>
      <%= f.text_field :thumbnail_size %>
    </div>
    <div class="field">
      <%= f.label :wiki_url %>
      <%= f.text_field :wiki_url %>
    </div>

    <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
